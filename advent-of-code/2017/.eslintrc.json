{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
		"mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "linebreak-style": "off",
        "no-plusplus": "off",
        "no-param-reassign": "off",
        "no-console": "off",
        "comma-dangle": "off",
        "radix": ["error", "as-needed"],
        "no-bitwise": "off",
        "no-unused-expressions": [
            "error",
            {
                "allowTernary": true
            }
        ],
        "yoda": [
            "error",
            "never",
            {
                "exceptRange": true
            }
        ]
    }
}
